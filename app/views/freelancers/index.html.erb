<p id="notice"><%= notice %></p>

<h1>Listing Freelancers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Firstname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @freelancers.each do |freelancer| %>
      <tr>
        <td><%= freelancer.email %></td>
        <td><%= freelancer.name %></td>
        <td><%= freelancer.firstname %></td>
        <td><%= link_to 'Show', freelancer %></td>
        <td><%= link_to 'Edit', edit_freelancer_path(freelancer) %></td>
        <td><%= link_to 'Destroy', freelancer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

